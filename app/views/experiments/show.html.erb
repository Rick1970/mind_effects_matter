<%- model_class = Experiment -%>
<div class="page-header">
  <h3><%= @experiment.title %></h3>
  <h3><small>Organization - <%= tenant_name @experiment.tenant_id %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @experiment.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @experiment.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expected_start_date) %>:</strong></dt>
  <dd><%= @experiment.expected_start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @experiment.tenant_id %></dd>
</dl>
<h3>Artifacts</h3>
<%= render 'artifacts/list', artifacts: @experiment.artifacts %>
<br />
<br />
<%= link_to '<Back to Organization Home', root_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tenant_experiment_path(experiment: @experiment, tenant: @experiment.tenant_id), :class => 'btn btn-default' %>
<%= link_to 'Edit Project Users', users_tenant_experiment_path(tenant_id: @experiment.tenant_id, id:             @experiment.id), :class => 'btn btn-default' %>              
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tenant_experiment_path(@experiment, @experiment.tenant_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
